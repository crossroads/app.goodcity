{{#init-foundation}}
  <aside class="left-off-canvas-menu">
    <ul class="off-canvas-list">
      <li><label>{{t "application.app_menu"}}</label></li>
      <li>{{#link-to 'offers'}}{{t "application.my_offers"}}{{/link-to}}</li>

      {{#unless is-production}}
        <li>
          {{#if cordova.iOSDevice}}
            {{#external-link linkUrl=supportGCLink}}
              {{t "menu.support_gc"}} <i class="fa fa-external-link"></i>
            {{/external-link}}
          {{else}}
            {{#link-to 'support'}}{{t "menu.support_gc"}}{{/link-to}}
          {{/if}}
        </li>
      {{/unless}}

      <li>{{#link-to 'faq' (query-params questionAnchor=null)}}{{t "menu.faq"}}{{/link-to}}</li>

      {{#unless (js-and (is-production) cordova.iOSDevice)}}
        <li>{{#link-to 'feedback'}}{{t "menu.feedback"}}{{/link-to}}</li>
      {{/unless}}

      {{#unless is-production}}
        {{#if cordova.iOSDevice}}
          <li>
            <a>
              {{t "menu.rate"}} <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            </a>
          </li>
        {{/if}}
      {{/unless}}

      <li><a href="#" {{action 'logMeOut'}}>{{t "application.logout"}}</a></li>
    </ul>

    {{partial "app_version"}}

  </aside>
{{/init-foundation}}
