<?xml version='1.0' encoding='utf-8'?>
<widget id="hk.goodcity.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>GoodCity</name>
  <description>The GoodCity initiative is a new way to donate quality goods in Hong Kong. See www.goodcity.hk for more details.</description>
  <author href="https://www.crossroads.org.hk">Crossroads</author>
  <icon src="www/assets/images/goodcity-icon-128.png" />
  <content src="index.html" />
  <platform name="android">
    <preference name="LoadUrlTimeoutValue" value="120000" />
  </platform>
  <engine name="ios" spec="^3.8.0" />
  <engine name="android" spec="^4.0.0" />
  <engine name="windows" spec="^3.8.1" />
  <plugin name="com.phonegap.plugins.PushPlugin" spec="https://github.com/phonegap-build/PushPlugin.git" />
  <plugin name="cordova-plugin-device" spec="^1.0.0" />
  <access origin="*" />
</widget>
